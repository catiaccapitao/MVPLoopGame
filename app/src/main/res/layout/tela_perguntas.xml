<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <View
        android:id="@+id/viewTelaPerguntasNivelA"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/container_components"
        android:backgroundTint="@color/light_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/nivel"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewTelaPerguntasNivelA"
        app:layout_constraintEnd_toEndOf="@+id/viewTelaPerguntasNivelA"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgBtnVoltarHomeTelaPerguntas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.852"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/viewPerguntaTelaPerguntas"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/container_components"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTelaPerguntasNivelA"
        app:layout_constraintVertical_bias="0.033"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imgNivelTelaPerguntas"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="175dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewTelaPerguntasNivelA"
        app:layout_constraintEnd_toEndOf="@+id/viewTelaPerguntasNivelA"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/viewTelaPerguntasNivelA"
        app:layout_constraintVertical_bias="0.437"
        app:srcCompat="@drawable/icone_a"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imgBtnVoltarHomeTelaPerguntas"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        android:background="@color/light_blue"
        app:layout_constraintBottom_toBottomOf="@+id/viewTelaPerguntasNivelA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="@+id/viewTelaPerguntasNivelA"
        app:layout_constraintTop_toTopOf="@+id/viewTelaPerguntasNivelA"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/voltar"
        tools:ignore="MissingConstraints" />

    <SeekBar
        android:id="@+id/skbTempoTelaPerguntas"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginHorizontal="20dp"
        android:max="10"
        android:progress="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlternativaETelaPerguntas"
        app:layout_constraintVertical_bias="0.158" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="87dp"
        android:layout_height="24dp"
        android:text="@string/pontuacao"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.771"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/txtPontuacaoTelaPerguntas"
        android:layout_width="44dp"
        android:layout_height="21dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/txtPerguntaTelaPerguntas"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="25dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewPerguntaTelaPerguntas"
        app:layout_constraintEnd_toEndOf="@+id/viewPerguntaTelaPerguntas"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/viewPerguntaTelaPerguntas"
        app:layout_constraintTop_toTopOf="@+id/viewPerguntaTelaPerguntas"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnAlternativaATelaPerguntas"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="25dp"
        android:backgroundTint="@color/white"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPerguntaTelaPerguntas"
        app:layout_constraintVertical_bias="0.055" />

    <Button
        android:id="@+id/btnAlternativaBTelaPerguntas"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="25dp"
        android:backgroundTint="@color/white"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/skbTempoTelaPerguntas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlternativaATelaPerguntas"
        app:layout_constraintVertical_bias="0.002" />

    <Button
        android:id="@+id/btnAlternativaCTelaPerguntas"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="25dp"
        android:backgroundTint="@color/white"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlternativaBTelaPerguntas"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnAlternativaDTelaPerguntas"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="25dp"
        android:backgroundTint="@color/white"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlternativaCTelaPerguntas"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnAlternativaETelaPerguntas"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="25dp"
        android:backgroundTint="@color/white"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlternativaDTelaPerguntas"
        app:layout_constraintVertical_bias="0.0" />





</androidx.constraintlayout.widget.ConstraintLayout>